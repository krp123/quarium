<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://checklistBrowse.caption"
        focusComponent="checklistsTable"
        messagesPack="com.company.quarium.web.screens.checklist">
    <data readOnly="true">
        <collection id="checklistsDc"
                    class="com.company.quarium.entity.checklist.SimpleChecklist">
            <view extends="project-checklist-view"/>
            <loader id="checklistsDl">
                <query>
                    <![CDATA[select e from quarium_SimpleChecklist e where e.project IS NULL]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="checklistsTable"
            spacing="true">
        <filter id="filter"
                applyTo="checklistsTable"
                dataLoader="checklistsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="checklistsTable"
                    width="100%"
                    dataContainer="checklistsDc"
                    multiselect="true">
            <actions>
                <action id="create" type="create" caption="msg://new"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
                <action id="refresh" type="refresh"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <popupButton id="createPopup" caption="msg://create">
                    <actions>
                        <action id="checklistsTable.create"/>
                        <action id="copy" caption="msg://copy"/>
                        <action id="uploadExcel" caption="msg://checklistBrowse.uploadXlsx"
                                icon="font-icon:FILE_EXCEL_O"/>
                    </actions>
                </popupButton>
                <button id="editBtn" action="checklistsTable.edit"/>
                <button id="removeBtn" action="checklistsTable.remove"/>
                <button id="refreshBtn" action="checklistsTable.refresh"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
