<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://statementEdit.caption"
        focusComponent="form"
        messagesPack="com.company.quarium.web.screens.statement">
    <data>
        <instance id="statementDc"
                  class="com.company.quarium.entity.references.Statement">
            <view extends="_local"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="180"
                width="550"
                forceDialog="true"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="statementDc">
            <column width="350px">
                <textField id="nameField" property="name"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
