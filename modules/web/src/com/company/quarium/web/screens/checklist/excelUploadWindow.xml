<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://exceluploadwindow.caption"
        messagesPack="com.company.quarium.web.screens.checklist">
    <data readOnly="true">
        <collection id="checklistsDc"
                    class="com.company.quarium.entity.checklist.SimpleChecklist">
            <view extends="_local"/>
            <loader id="checklistsDl">
                <query>
                    <![CDATA[select e from quarium_SimpleChecklist e where e.project IS NULL]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="AUTO"
                width="400"
                forceDialog="true"/>
    <layout>
        <vbox margin="true" width="auto" spacing="true">
            <hbox margin="true" spacing="true">
                <multiUpload id="multiUploadField"
                             caption="msg://checklistBrowse.upload"
                             permittedExtensions=".xlsx"/>
                <linkButton id="downloadTemplate"
                            caption="msg://exceluploadwindow.downloadTemplate"
                            icon="SAVE"
                            align="MIDDLE_RIGHT"
                            invoke="downloadTemplate"/>
            </hbox>
        </vbox>
    </layout>
</window>