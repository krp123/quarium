<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://extChecklistEdit.caption"
        messagesPack="com.company.quarium.web.screens.checklist">
    <data>
        <instance id="checklistDc"
                  class="com.company.quarium.entity.checklist.Checklist">
            <view extends="_local">
                <property name="assignedQa" view="qaProjectRelationship-view"/>
                <property name="state" view="_minimal"/>
            </view>
            <loader/>
        </instance>
        <collection id="statesDc" class="com.company.quarium.entity.references.Statement" view="_minimal">
            <loader id="statesDl">
                <query>
                    <![CDATA[select e from quarium_Statement e]]>
                </query>
            </loader>
        </collection>
        <collection id="prioritiesDc" class="com.company.quarium.entity.references.Priority" view="_minimal">
            <loader id="prioritiesDl">
                <query>
                    <![CDATA[select e from quarium_Priority e]]>
                </query>
            </loader>
        </collection>
        <collection id="qaDc" class="com.company.quarium.entity.project.QaProjectRelationship"
                    view="qaProjectRelationship-view">
            <loader id="qaDl">
                <query>
                    <![CDATA[select e from quarium_QaProjectRelationship e]]>
                </query>
            </loader>
        </collection>
        <collection id="testCasesDc"
                    class="com.company.quarium.entity.checklist.TestCase">
            <view extends="_local"/>
            <loader id="testCasesDl">
                <query>
                    <![CDATA[select e from quarium_TestCase e where e.checklist = :checklist]]>
                </query>
            </loader>
        </collection>
        <instance id="testCaseDc"
                  class="com.company.quarium.entity.checklist.TestCase">
            <view extends="_local">
                <property name="priority" view="_minimal"/>
                <property name="state" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <actions>
        <action id="save" icon="icons/ok.png" caption="mainMsg://actions.Ok" shortcut="CTRL-ENTER"/>
        <action id="cancel" icon="icons/cancel.png" caption="mainMsg://actions.Cancel" description="Esc"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true" margin="true">
        <grid spacing="true" id="form">
            <columns count="3"/>
            <rows>
                <row>
                    <textField id="nameField" dataContainer="checklistDc" property="name"/>
                    <lookupField id="assignedQaField" dataContainer="checklistDc" optionsContainer="qaDc"
                                 property="assignedQa"/>
                    <lookupField id="stateField" dataContainer="checklistDc" optionsContainer="statesDc"
                                 property="state"/>
                </row>
            </rows>
        </grid>

        <split id="split" height="400" orientation="horizontal" reversePosition="true" width="100%">
            <vbox id="lookupBox" expand="table" height="100%" margin="true,true,false,false" spacing="true">
                <groupTable id="table"
                            width="100%"
                            dataContainer="testCasesDc"
                            multiselect="true"
                            presentations="true">
                    <actions>
                        <action id="create" type="create"/>
                        <action id="edit" type="edit"/>
                        <action id="remove" type="remove"/>
                    </actions>
                    <columns>
                        <column id="name"/>
                        <column id="step"/>
                        <column id="expectedResult"/>
                    </columns>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn" action="table.create"/>
                        <button id="editBtn" action="table.edit"/>
                        <button id="removeBtn" action="table.remove"/>
                    </buttonsPanel>
                </groupTable>
            </vbox>
            <vbox id="editBox" height="100%" margin="true,false,false,true" expand="fieldGroupBox"
                  spacing="true">
                <scrollBox id="fieldGroupBox" width="100%">
                    <form id="caseForm" dataContainer="testCaseDc">
                        <column width="350px">
                            <textField id="caseNameField" property="name"/>
                            <textField id="stepField" property="step"/>
                            <textArea id="expectedResultField" property="expectedResult" rows="5"/>
                        </column>
                        <column width="150px">
                            <lookupField id="priorityField" optionsContainer="prioritiesDc" property="priority"/>
                            <lookupField id="caseStateField" optionsContainer="statesDc" property="state"/>
                        </column>
                    </form>
                </scrollBox>
                <hbox id="actionsPane" spacing="true" visible="true">
                    <button id="saveBtn" action="save"/>
                    <button id="cancelBtn" action="cancel"/>
                </hbox>
            </vbox>
        </split>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
