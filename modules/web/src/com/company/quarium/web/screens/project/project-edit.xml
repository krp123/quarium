<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://projectEdit.caption"
        focusComponent="form"
        messagesPack="com.company.quarium.web.screens.project">
    <data>
        <instance id="projectDc"
                  class="com.company.quarium.entity.project.SimpleProject">
            <view extends="_local">
                <property name="qa" view="edit"/>
                <property name="configuration" view="edit"/>
                <property name="checklist" view="project-checklist-view"/>
                <property name="createTs"/>
                <property name="module" view="edit"/>
                <property name="regressChecklist" view="regressChecklist-view"/>
                <property name="projectVersion" view="projectVersion-view"/>
            </view>
            <loader/>
            <collection id="qaProjectDc" property="qa"/>
            <collection id="configurationProjectDc" property="configuration"/>
            <collection id="checklistsDc" property="checklist"/>
            <collection id="modulesDc" property="module"/>
            <collection id="regressChecklistDc" property="regressChecklist"/>
            <collection id="versionsDc" property="projectVersion"/>
        </instance>
        <collection id="bugsDc" class="com.company.quarium.entity.checklist.TestCase" view="testCase-view">
            <loader id="bugsDl">
                <query>
                    <![CDATA[select e from quarium_TestCase e
                    where e.checklist.parentCard.project = :project
                    and e.state.id = 'cd85906d-6fbe-3e8d-8602-bf1af8e1ea53']]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <tabSheet height="AUTO">
            <tab id="detailsTab" caption="msg://projectEdit.details" spacing="true" margin="true">
                <form id="form" dataContainer="projectDc">
                    <column width="350px">
                        <textField id="projectNameField" property="projectName"/>
                        <textField id="currentReleaseField" property="currentRelease"/>
                        <textArea id="descriptionField" property="description" rows="5"/>

                    </column>
                    <column>
                        <button id="addNewVersion" caption="msg://projectEdit.newReleaseButton"/>
                    </column>
                </form>
                <vbox margin="true" width="auto">
                    <form id="relationshipsForm">
                        <column>
                            <groupBox id="qaBox" caption="msg://com.company.quarium.entity/Project.qa"
                                      collapsable="true">
                                <table id="qaProjectRelationshipsTable"
                                       dataContainer="qaProjectDc"
                                       width="450px"
                                       height="250px"
                                       multiselect="true">
                                    <actions>
                                        <action id="addQa" type="add"/>
                                        <action id="removeQa" type="remove"/>
                                    </actions>
                                    <columns>
                                        <column id="qa"/>
                                    </columns>
                                    <buttonsPanel>
                                        <button action="qaProjectRelationshipsTable.addQa"/>
                                        <button action="qaProjectRelationshipsTable.removeQa"/>
                                    </buttonsPanel>
                                </table>
                            </groupBox>
                        </column>
                        <column>
                            <groupBox id="moduleBox"
                                      caption="msg://com.company.quarium.entity/Project.modulesList"
                                      collapsable="true">
                                <table id="modulesTable"
                                       dataContainer="modulesDc"
                                       width="450px"
                                       height="250px"
                                       multiselect="true">
                                    <actions>
                                        <action id="createModule" type="create">
                                            <properties>
                                                <property name="screenClass"
                                                          value="com.company.quarium.web.screens.module.ModuleEdit"/>
                                            </properties>
                                        </action>
                                        <action id="editModule" type="edit">
                                            <properties>
                                                <property name="screenClass"
                                                          value="com.company.quarium.web.screens.module.ModuleEdit"/>
                                            </properties>
                                        </action>
                                        <action id="removeModule" type="remove"/>
                                    </actions>
                                    <columns>
                                        <column id="name"
                                                caption="msg://com.company.quarium.entity/Project.modules"/>
                                    </columns>
                                    <buttonsPanel>
                                        <button action="modulesTable.createModule"/>
                                        <button action="modulesTable.editModule"/>
                                        <button action="modulesTable.removeModule"/>
                                    </buttonsPanel>
                                </table>
                            </groupBox>
                        </column>
                        <column>
                            <groupBox id="configurationBox"
                                      caption="msg://com.company.quarium.entity/Project.configurationList"
                                      collapsable="true">
                                <table id="configurationProjectRelationshipsTable"
                                       dataContainer="configurationProjectDc"
                                       width="450px"
                                       height="250px"
                                       multiselect="true">
                                    <actions>
                                        <action id="addConfiguration" type="add"/>
                                        <action id="removeConfiguration" type="remove"/>
                                    </actions>
                                    <columns>
                                        <column id="configuration"
                                                caption="msg://com.company.quarium.entity/Project.configuration"/>
                                    </columns>
                                    <buttonsPanel>
                                        <button action="configurationProjectRelationshipsTable.addConfiguration"/>
                                        <button action="configurationProjectRelationshipsTable.removeConfiguration"/>
                                    </buttonsPanel>
                                </table>
                            </groupBox>
                        </column>
                    </form>
                </vbox>
            </tab>

            <tab id="testPlanTab" caption="msg://projectEdit.testPlan" spacing="true" margin="true">
                <vbox id="checklistBox" caption="msg://com.company.quarium.entity/Project.checklists"
                      width="100%" height="100%" margin="true">
                    <groupTable id="checklistsTable"
                                width="100%"
                                height="460px"
                                dataContainer="checklistsDc"
                                multiselect="true"
                                presentations="true">
                        <actions>
                            <action id="create" type="create">
                                <properties>
                                    <property name="screenClass"
                                              value="com.company.quarium.web.screens.checklist.ExtChecklistEdit"/>
                                </properties>
                            </action>
                            <action id="addChecklist" type="add"/>
                            <action id="edit" type="edit">
                                <properties>
                                    <property name="screenClass"
                                              value="com.company.quarium.web.screens.checklist.ExtChecklistEdit"/>
                                </properties>
                            </action>
                            <action id="remove" type="remove"/>
                        </actions>
                        <columns>
                            <column id="name"/>
                            <column id="state"/>
                            <column id="assignedQa" caption="msg://projectEdit.QaColumn"/>
                            <column id="isUsedInRegress" caption="msg://projectEdit.isUsedInRegressColumn"/>
                        </columns>
                        <rowsCount/>
                        <buttonsPanel id="buttonsPanel"
                                      alwaysVisible="true">
                            <button id="createBtn" action="checklistsTable.create"/>
                            <button id="addBtn" action="checklistsTable.addChecklist"/>
                            <button id="editBtn" action="checklistsTable.edit"/>
                            <button id="removeBtn" action="checklistsTable.remove"/>
                        </buttonsPanel>
                    </groupTable>
                </vbox>
            </tab>
            <tab id="regressTab" caption="msg://projectEdit.regress" margin="true,false,false,false" spacing="true">
                <form id="statisticsForm" width="100%"
                      height="AUTO">
                    <column>
                        <groupBox caption="msg://com.company.quarium.entity/Project.qaStatistics" collapsable="true">
                            <table id="qaStatisticsTable"
                                   width="100%"
                                   height="AUTO"
                                   dataContainer="qaProjectDc"
                                   showSelection="false">
                                <columns>
                                    <column id="qa"/>
                                    <column id="timeLeft" caption="msg://projectEdit.timeLeft"/>
                                    <column id="timeTotal" caption="msg://projectEdit.timeTotal"/>
                                </columns>
                                <rows/>
                            </table>
                        </groupBox>
                    </column>
                    <column>
                        <groupBox caption="msg://projectEdit.bugs" collapsable="true">
                            <table id="bugsTable"
                                   width="100%"
                                   height="AUTO"
                                   dataContainer="bugsDc">
                                <columns>
                                    <column id="name"
                                            link="true"
                                            linkScreen="quarium_TestCase.edit"
                                            linkScreenOpenType="DIALOG"/>
                                </columns>
                                <rows/>
                            </table>
                        </groupBox>
                    </column>
                </form>
                <vbox id="regressChecklistBox" caption="msg://com.company.quarium.entity/Project.checklists"
                      width="100%" height="100%" margin="true">
                    <groupTable id="regressChecklistsTable"
                                width="100%"
                                height="460px"
                                dataContainer="regressChecklistDc"
                                multiselect="true"
                                presentations="true">
                        <actions>
                            <action id="create" type="create">
                                <properties>
                                    <property name="screenClass"
                                              value="com.company.quarium.web.screens.regresschecklist.RegressChecklistEdit"/>
                                </properties>
                            </action>
                            <action id="edit" type="edit">
                                <properties>
                                    <property name="screenClass"
                                              value="com.company.quarium.web.screens.regresschecklist.RegressChecklistEdit"/>
                                </properties>
                            </action>
                            <action id="remove" type="remove"/>
                        </actions>
                        <columns>
                            <column id="name"/>
                            <column id="state"/>
                            <column id="assignedQa" caption="msg://projectEdit.QaColumn"/>
                        </columns>
                        <rowsCount/>
                        <buttonsPanel id="regressButtonsPanel"
                                      alwaysVisible="true">
                            <button id="regressCreateBtn" action="regressChecklistsTable.create"/>
                            <button id="regressEditBtn" action="regressChecklistsTable.edit"/>
                            <button id="regressRemoveBtn" action="regressChecklistsTable.remove"/>
                        </buttonsPanel>
                    </groupTable>
                </vbox>
            </tab>
            <tab id="releasesTab" caption="msg://projectEdit.releasesTab" margin="true,false,false,false"
                 spacing="true">
                <groupTable id="projectVersions"
                            dataContainer="versionsDc"
                            width="100%">
                    <actions>
                        <action id="edit" type="edit">
                            <properties>
                                <property name="screenClass"
                                          value="com.company.quarium.web.screens.projectversion.ProjectVersionEdit"/>
                            </properties>
                        </action>
                    </actions>
                    <columns>
                        <column id="currentRelease" caption="msg://projectEdit.release"/>
                        <column id="creationDate" caption="msg://projectEdit.releaseDate">
                            <formatter class="com.haulmont.cuba.gui.components.formatters.DateFormatter"
                                       format="yyyy-MM-dd HH:mm:ss"
                                       useUserTimezone="true"/>
                        </column>
                    </columns>
                    <rows/>
                    <buttonsPanel>
                        <button action="projectVersions.edit" caption="msg://projectEdit.open"/>
                    </buttonsPanel>
                </groupTable>
            </tab>
        </tabSheet>
        <hbox id="editActions" spacing="true" height="100%" align="BOTTOM_LEFT">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
