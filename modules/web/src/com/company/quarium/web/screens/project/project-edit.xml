<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://projectEdit.caption"
        focusComponent="form"
        messagesPack="com.company.quarium.web.screens.project">
    <data>
        <instance id="projectDc"
                  class="com.company.quarium.entity.project.Project">
            <view extends="_local">
                <property name="qa" view="edit"/>
                <property name="createTs"/>
            </view>
            <loader/>
            <collection id="qaProjectDc" property="qa"/>
        </instance>

        <collection id="checklistsDc"
                    class="com.company.quarium.entity.checklist.Checklist">
            <view extends="_local"/>
            <loader id="checklistsDl">
                <query>
                    <![CDATA[select e from quarium_Checklist e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <tabSheet>
            <tab id="tab" caption="msg://projectEdit.details" spacing="true" margin="true">
                <form id="form" dataContainer="projectDc">
                    <column width="350px">
                        <textField id="projectNameField" property="projectName"/>
                        <textArea id="descriptionField" property="description" rows="5"/>
                    </column>
                </form>

                <vbox margin="true" width="auto">
                    <groupBox id="qaBox" caption="msg://com.company.quarium.entity/Project.qa">
                        <table id="qaProjectRelationshipsTable"
                               dataContainer="qaProjectDc"
                               width="400px"
                               height="250px">
                            <actions>
                                <action id="addQa" type="add"/>
                                <action id="remove" type="remove"></action>
                            </actions>
                            <columns>
                                <column id="qa"/>
                            </columns>
                            <buttonsPanel>
                                <button action="qaProjectRelationshipsTable.addQa"/>
                                <button action="qaProjectRelationshipsTable.remove"/>
                            </buttonsPanel>
                        </table>
                    </groupBox>
                </vbox>
            </tab>

            <tab id="testPlanTab" caption="msg://projectEdit.testPlan" spacing="true" margin="true">
                <vbox id="checklistBox" caption="msg://com.company.quarium.entity/Project.checklists"
                      width="AUTO" margin="true">
                    <groupTable id="table"
                                width="450px"
                                height="250px"
                                dataContainer="checklistsDc"
                                multiselect="true"
                                presentations="true">
                        <actions>
                            <action id="create" type="create"/>
                            <action id="edit" type="edit"/>
                            <action id="remove" type="remove"/>
                        </actions>
                        <columns>
                            <column id="name"/>
                        </columns>
                        <rowsCount/>
                        <buttonsPanel id="buttonsPanel"
                                      alwaysVisible="true">
                            <button id="createBtn" action="table.create"/>
                            <button id="editBtn" action="table.edit"/>
                            <button id="removeBtn" action="table.remove"/>
                        </buttonsPanel>
                    </groupTable>
                </vbox>
            </tab>
        </tabSheet>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
