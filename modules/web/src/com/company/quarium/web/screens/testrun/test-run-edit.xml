<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://testRunEdit.caption"
        focusComponent="form"
        messagesPack="com.company.quarium.web.screens.testrun">
    <data>
        <instance id="testRunDc"
                  class="com.company.quarium.entity.project.TestRun">
            <view extends="testRun-view">
                <property name="checklists" view="regressChecklist-view"/>
            </view>
            <loader/>
            <collection id="checklistsDc" property="checklists"/>
        </instance>
        <collection id="qaDc" class="com.company.quarium.entity.project.QaProjectRelationship" view="edit">
            <loader id="qaDl">
                <query>
                    <![CDATA[select e from quarium_QaProjectRelationship e
                    where e.project = :project]]>
                </query>
            </loader>
        </collection>
        <collection id="modulesDc" class="com.company.quarium.entity.project.Module" view="edit">
            <loader id="moduleDl">
                <query>
                    <![CDATA[select e from quarium_Module e
                    where e.project = :project]]>
                </query>
            </loader>
        </collection>
        <collection id="suitsDc" class="com.company.quarium.entity.checklist.RegressChecklist"
                    view="regressChecklist-view">
            <loader id="suitsDl">
                <query>
                    <![CDATA[select e from quarium_RegressChecklist e
                    where e.testRun = :testRun]]>
                </query>
            </loader>
        </collection>
        <collection id="milestoneDc" class="com.company.quarium.entity.project.Milestone" view="_local">
            <loader id="milestoneDl">
                <query>
                    <![CDATA[select e from quarium_Milestone e
                    where e.project = :project and e.status = 'Active']]>
                </query>
            </loader>
        </collection>
        <collection id="bugsDc" class="com.company.quarium.entity.checklist.TestCase" view="testCase-view">
            <loader id="bugsDl">
                <query>
                    <![CDATA[select tc from quarium_TestCase tc
                    join quarium_RegressChecklist rc
                    where tc = rc.testCase
                    and tc.result = 'Failed'
                    and rc.testRun = :testRun]]>
                </query>
            </loader>
        </collection>
        <collection id="skippedCasesDc" class="com.company.quarium.entity.checklist.TestCase" view="testCase-view">
            <loader id="skippedCasesDl">
                <query>
                    <![CDATA[select tc from quarium_TestCase tc
                    join quarium_RegressChecklist rc
                    where tc = rc.testCase
                    and tc.result = 'Skipped'
                    and rc.testRun = :testRun]]>
                </query>
            </loader>
        </collection>
        <collection id="blockedCasesDc" class="com.company.quarium.entity.checklist.TestCase" view="testCase-view">
            <loader id="blockedCasesDl">
                <query>
                    <![CDATA[select tc from quarium_TestCase tc
                    join quarium_RegressChecklist rc
                    where tc = rc.testCase
                    and tc.result = 'Blocked'
                    and rc.testRun = :testRun]]>
                </query>
            </loader>
        </collection>
        <collection id="passedCasesDc" class="com.company.quarium.entity.checklist.TestCase" view="testCase-view">
            <loader id="passedCasesDl">
                <query>
                    <![CDATA[select tc from quarium_TestCase tc
                    join quarium_RegressChecklist rc
                    where tc = rc.testCase
                    and tc.result = 'Passed'
                    and rc.testRun = :testRun]]>
                </query>
            </loader>
        </collection>
        <collection id="totalCasesDc" class="com.company.quarium.entity.checklist.TestCase" view="testCase-view">
            <loader id="totalCasesDl">
                <query>
                    <![CDATA[select tc from quarium_TestCase tc
                    join quarium_RegressChecklist rc
                    where tc = rc.testCase
                    and rc.testRun = :testRun]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="testRunTabSheet">
        <tabSheet id="testRunTabSheet">
            <tab id="mainTab" expand="testSuitsGroupBox" caption="msg://mainTab" spacing="true" margin="true">
                <form id="form" dataContainer="testRunDc">
                    <column width="350px">
                        <textField id="nameField" property="name" required="true"/>
                        <lookupField id="milestone" property="milestone" optionsContainer="milestoneDc"
                                     caption="msg://testRunEdit.milestone"/>
                        <dateField id="runStartDate" datatype="localDate" property="runStartDate" width="AUTO"/>
                    </column>
                    <column width="400px">
                        <textArea id="descriptionField" property="description" rowspan="2"/>
                        <dateField id="runFinishDate" datatype="localDate" property="runFinishDate" width="AUTO"/>
                    </column>
                </form>
                <groupBox id="testSuitsGroupBox"
                          caption="msg://testSuits"
                          collapsable="false">
                    <groupTable id="checklistTable"
                                width="100%"
                                height="100%"
                                dataContainer="checklistsDc"
                                multiselect="true"
                                presentations="true"
                                editable="true">
                        <actions>
                            <action id="create" type="create">
                                <properties>
                                    <property name="screenClass"
                                              value="com.company.quarium.web.screens.regresschecklist.RegressChecklistEdit"/>
                                </properties>
                            </action>
                            <action id="addChecklist" type="add"/>
                            <action id="edit" type="edit">
                                <properties>
                                    <property name="screenClass"
                                              value="com.company.quarium.web.screens.regresschecklist.RegressChecklistEdit"/>
                                </properties>
                            </action>
                            <action id="remove" type="remove"/>
                        </actions>
                        <columns>
                            <column id="name"/>
                            <column id="state"/>
                            <column id="module"/>
                            <column id="assignedQa"
                                    editable="true"
                                    optionsContainer="qaDc"
                                    width="300px"/>
                        </columns>
                        <rows/>
                        <buttonsPanel id="buttonsPanel"
                                      alwaysVisible="true">
                            <button id="createBtn" action="checklistTable.create"/>
                            <button id="addBtn" action="checklistTable.addChecklist" icon="ADD_TO_SET_ACTION"/>
                            <button id="editBtn" action="checklistTable.edit"/>
                            <button id="removeBtn" action="checklistTable.remove"/>
                        </buttonsPanel>
                    </groupTable>
                </groupBox>
            </tab>
            <tab id="statistics" expand="suitsStatistics" caption="msg://statistics" spacing="true" margin="true">
                <groupBox caption="msg://com.company.quarium.entity/Project.qaStatistics">
                    <table id="testPlanQaStatisticsTable"
                           width="50%"
                           height="AUTO"
                           dataContainer="qaDc"
                           showSelection="false">
                        <columns>
                            <column id="qa"/>
                            <column id="timeLeft" caption="msg://testRunEdit.timeLeft"/>
                            <column id="timeTotal" caption="msg://testRunEdit.timeTotal"/>
                        </columns>
                        <rows/>
                    </table>
                </groupBox>

                <groupBox id="suitsStatistics" caption="msg://testRunEdit.suitsStatistics">
                    <groupTable id="suitsStatisticsTable"
                                width="100%"
                                height="100%"
                                dataContainer="suitsDc"
                                showSelection="false"
                                responsive="true">
                        <columns>
                            <column id="name"/>
                            <column id="module"/>
                            <column id="state"/>
                            <column id="casesPassed" caption="msg://casesPassed"/>
                            <column id="casesFailed" caption="msg://casesFailed"/>
                            <column id="casesSkipped" caption="msg://casesSkipped"/>
                            <column id="casesBlocked" caption="msg://casesBlocked"/>
                            <column id="casesTotal" caption="msg://casesTotal"/>
                        </columns>
                        <rows/>
                    </groupTable>
                </groupBox>
            </tab>
            <tab id="defects" caption="msg://defects" spacing="true" margin="true">
                <groupBox caption="msg://defects" collapsable="false" height="100%">
                    <groupTable id="bugsTable"
                                width="100%"
                                height="100%"
                                dataContainer="bugsDc"
                                showSelection="false">
                        <columns>
                            <column id="name"
                                    link="true"
                                    linkScreen="quarium_TestCase.edit"
                                    linkScreenOpenType="DIALOG"/>
                            <column id="checklist"
                                    caption="msg://testSuit"/>
                            <column id="checklist.module"
                                    caption="msg://module"/>
                        </columns>
                        <rows/>
                    </groupTable>
                </groupBox>
            </tab>
        </tabSheet>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
            <button id="runReport" caption="msg://testRunEdit.report"/>
        </hbox>
    </layout>
</window>
