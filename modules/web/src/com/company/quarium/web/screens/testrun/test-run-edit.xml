<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://testRunEdit.caption"
        focusComponent="form"
        messagesPack="com.company.quarium.web.screens.testrun">
    <data>
        <instance id="testRunDc"
                  class="com.company.quarium.entity.project.TestRun">
            <view extends="testRun-view">
                <property name="checklists" view="regressChecklist-view"/>
            </view>
            <loader/>
            <collection id="checklistsDc" property="checklists"/>
        </instance>
        <collection id="qaDc" class="com.company.quarium.entity.project.QaProjectRelationship" view="edit">
            <loader id="qaDl">
                <query>
                    <![CDATA[select e from quarium_QaProjectRelationship e
                    where e.project = :project]]>
                </query>
            </loader>
        </collection>
        <collection id="modulesDc" class="com.company.quarium.entity.project.Module" view="edit">
            <loader id="moduleDl">
                <query>
                    <![CDATA[select e from quarium_Module e
                    where e.project = :project]]>
                </query>
            </loader>
        </collection>
        <collection id="milestoneDc" class="com.company.quarium.entity.project.Milestone" view="_local">
            <loader id="milestoneDl">
                <query>
                    <![CDATA[select e from quarium_Milestone e
                    where e.project = :project and e.status = 'Active']]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="testRunDc">
            <column width="350px">
                <textField id="nameField" property="name" required="true"/>
                <lookupField id="milestone" optionsContainer="milestoneDc" caption="msg://testRunEdit.milestone"/>
            </column>
            <column width="400px">
                <textArea id="descriptionField" property="description" rowspan="2"/>
            </column>
        </form>
        <form id="testPlanStatisticsForm" width="100%"
              height="AUTO">
            <column flex="1">
                <groupBox caption="msg://com.company.quarium.entity/Project.qaStatistics" collapsable="true">
                    <table id="testPlanQaStatisticsTable"
                           width="100%"
                           height="AUTO"
                           dataContainer="qaDc"
                           showSelection="false">
                        <columns>
                            <column id="qa"/>
                            <column id="timeLeft" caption="msg://testRunEdit.timeLeft"/>
                            <column id="timeTotal" caption="msg://testRunEdit.timeTotal"/>
                        </columns>
                        <rows/>
                    </table>
                </groupBox>
            </column>
            <column flex="2">
                <groupBox caption="msg://testRunEdit.modulesStatistics" collapsable="true">
                    <table id="modulesStatisticsTable"
                           width="100%"
                           height="AUTO"
                           dataContainer="modulesDc"
                           showSelection="false"
                           responsive="true">
                        <columns>
                            <column id="name"/>
                            <column id="timeLeft" caption="msg://testRunEdit.timeLeft"/>
                            <column id="timeTotal" caption="msg://testRunEdit.timeTotal"/>
                            <column id="checklistsLeft" caption="msg://testRunEdit.checklistsLeft"/>
                            <column id="checklistsTotal" caption="msg://testRunEdit.checklistsTotal"/>
                            <column id="completed" caption="msg://testRunEdit.completed"/>
                        </columns>
                        <rows/>
                    </table>
                </groupBox>
            </column>
        </form>
        <form id="regressDateForm" dataContainer="testRunDc">
            <column>
                <dateField id="runStartDate" property="runStartDate"/>
            </column>
            <column>
                <dateField id="runFinishDate" property="runFinishDate"/>
            </column>
            <column>
                <button id="runReport" caption="msg://testRunEdit.report"/>
            </column>
        </form>
        <groupTable id="checklistTable"
                    width="100%"
                    dataContainer="checklistsDc"
                    multiselect="true"
                    presentations="true"
                    editable="true">
            <actions>
                <action id="create" type="create">
                    <properties>
                        <property name="screenClass"
                                  value="com.company.quarium.web.screens.regresschecklist.RegressChecklistEdit"/>
                    </properties>
                </action>
                <action id="addChecklist" type="add"/>
                <action id="edit" type="edit">
                    <properties>
                        <property name="screenClass"
                                  value="com.company.quarium.web.screens.regresschecklist.RegressChecklistEdit"/>
                    </properties>
                </action>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="state"/>
                <column id="module"/>
                <column id="assignedQa"
                        editable="true"
                        optionsContainer="qaDc"
                        width="300px"/>
            </columns>
            <rows/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="checklistTable.create"/>
                <button id="addBtn" action="checklistTable.addChecklist" icon="ADD_TO_SET_ACTION"/>
                <button id="editBtn" action="checklistTable.edit"/>
                <button id="removeBtn" action="checklistTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
