<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://regressChecklistEdit.caption"
        focusComponent="form"
        messagesPack="com.company.quarium.web.screens.regresschecklist">
    <data>
        <instance id="regressChecklistDc"
                  class="com.company.quarium.entity.checklist.RegressChecklist">
            <view extends="_local">
                <property name="regressProject" view="_minimal"/>
                <property name="parentCard" view="_minimal"/>
                <property name="module" view="_minimal"/>
                <property name="assignedQa" view="_minimal"/>
                <property name="state" view="_minimal"/>
                <property name="testCase" view="_minimal">
                    <property name="comment"/>
                    <property name="ticket"/>
                    <property name="caseStep" view="_minimal">
                        <property name="step"/>
                        <property name="creationDate"/>
                    </property>
                    <property name="hours"/>
                    <property name="minutes"/>
                    <property name="priority" view="_minimal"/>
                    <property name="state" view="_minimal"/>
                    <property name="expectedResult"/>
                </property>
                <property name="project" view="_minimal"/>
            </view>
            <loader/>
        </instance>
        <collection id="statesDc" class="com.company.quarium.entity.references.Statement" view="_minimal">
            <loader id="statesDl">
                <query>
                    <![CDATA[select e from quarium_Statement e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="scrollBox" spacing="true">
        <scrollBox id="scrollBox" spacing="true">
            <form id="form" dataContainer="regressChecklistDc">
                <column width="350px">
                    <textField id="nameField" property="name"/>
                    <pickerField id="parentCardField" property="parentCard">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </pickerField>
                    <textField id="commentField" property="comment"/>
                    <textField id="hoursField" property="hours"/>
                    <textField id="minutesField" property="minutes"/>
                    <textField id="ticketField" property="ticket"/>
                    <pickerField id="moduleField" property="module">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </pickerField>
                    <checkBox id="isUsedInRegressField" property="isUsedInRegress"/>
                    <pickerField id="assignedQaField" property="assignedQa">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </pickerField>
                    <lookupPickerField id="stateField" optionsContainer="statesDc" property="state"/>
                    <pickerField id="projectField" property="project">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </pickerField>
                    <pickerField id="regressProjectField" property="regressProject">
                        <actions>
                            <action id="lookup" type="picker_lookup"/>
                            <action id="clear" type="picker_clear"/>
                        </actions>
                    </pickerField>
                </column>
            </form>
        </scrollBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
