<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://checklistEdit.caption"
        focusComponent="form"
        messagesPack="com.company.quarium.web.screens.checklist">
    <data>
        <instance id="checklistDc"
                  class="com.company.quarium.entity.checklist.Checklist">
            <view extends="edit">
                <property name="testCase" view="testCase-edit" fetch="AUTO"/>
            </view>
            <loader/>
            <collection id="testCasesDc" property="testCase">
                <collection id="stepsCollection" property="caseStep"/>
            </collection>
        </instance>

        <instance id="testCaseDc"
                  class="com.company.quarium.entity.checklist.TestCase">
            <view extends="testCase-view">
                <property name="caseStep" view="step-view"/>
            </view>
            <loader/>
            <collection id="stepsCollection" property="caseStep"/>
        </instance>
    </data>
    <actions>
        <action id="save" icon="icons/ok.png" caption="mainMsg://actions.Ok" shortcut="CTRL-ENTER"/>
        <action id="cancel" icon="icons/cancel.png" caption="mainMsg://actions.Cancel" description="Esc"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <tabSheet>
            <tab id="detailsTab" caption="msg://checklistEdit.details" spacing="true" margin="true">
                <form id="form" dataContainer="checklistDc">
                    <column width="350px">
                        <textField id="nameField" property="name" required="true"/>
                        <textArea id="commentField" property="comment"/>
                    </column>
                </form>
                <groupBox id="testCaseBox" caption="msg://checklistEdit.testCaseBox" height="550">
                    <split id="split" height="100%" orientation="horizontal"
                           reversePosition="true" width="100%" pos="70">
                        <vbox id="lookupBox" expand="table" height="100%" margin="false,true,false,false"
                              spacing="true">
                            <table id="table"
                                   width="100%"
                                   dataContainer="testCasesDc"
                                   multiselect="true"
                                   presentations="true">
                                <actions>
                                    <action id="create" type="create"/>
                                    <action id="edit" type="edit"/>
                                    <action id="remove" type="remove"/>
                                </actions>
                                <columns>
                                    <column id="number" width="20"/>
                                    <column id="name"/>
                                </columns>
                                <rowsCount/>
                                <buttonsPanel id="buttonsPanel"
                                              alwaysVisible="true">
                                    <button id="createBtn" action="table.create"/>
                                    <button id="editBtn" action="table.edit"/>
                                    <button id="removeBtn" action="table.remove"/>
                                </buttonsPanel>
                            </table>
                        </vbox>
                        <vbox id="editBox" height="100%" margin="true" expand="fieldGroupBox"
                              spacing="true" width="100%">
                            <scrollBox id="fieldGroupBox">
                                <grid id="caseForm" spacing="true" width="50%">
                                    <columns>
                                        <column/>
                                    </columns>
                                    <rows>
                                        <row>
                                            <textField id="caseNameField" property="name" width="100%"
                                                       dataContainer="testCaseDc"
                                                       caption="msg://checklistEdit.caseName"/>
                                        </row>
                                        <row>
                                            <table id="stepsTable"
                                                   dataContainer="stepsCollection"
                                                   width="100%"
                                                   height="200px"
                                                   multiselect="true"
                                                   columnHeaderVisible="false"
                                                   caption="msg://checklistEdit.steps"
                                                   multiLineCells="true"
                                                   sortable="true">
                                                <actions>
                                                    <action id="createStep" type="create"/>
                                                    <action id="removeStep" type="remove"/>
                                                </actions>
                                                <columns>
                                                    <column id="number" editable="false" width="20"/>
                                                    <column id="step" editable="true"/>
                                                </columns>
                                                <buttonsPanel>
                                                    <button action="stepsTable.createStep" caption=""
                                                            icon="ADD_ACTION"/>
                                                    <button id="removeStep" action="stepsTable.removeStep" caption=""
                                                            icon="REMOVE_ACTION"/>
                                                </buttonsPanel>
                                            </table>
                                        </row>
                                        <row>
                                            <textArea id="expectedResultField" property="expectedResult"
                                                      rows="5" width="100%" dataContainer="testCaseDc"
                                                      caption="msg://checklistEdit.expectedResult"/>
                                        </row>
                                    </rows>
                                </grid>
                            </scrollBox>
                            <hbox id="actionsPane" spacing="true" visible="true">
                                <button id="saveBtn" action="save"/>
                                <button id="cancelBtn" action="cancel"/>
                            </hbox>
                        </vbox>
                    </split>
                </groupBox>
            </tab>
            <tab id="versionsTab" caption="msg://checklistEdit.versions" spacing="true" margin="true">
                <vbox id="versionsBox" margin="true">
                    <frame id="diffFrame"
                           src="/com/haulmont/cuba/gui/app/core/entitydiff/diff-view.xml"
                           width="100%"
                           height="600px"/>
                </vbox>
            </tab>
        </tabSheet>
        <hbox id="editActions" spacing="true" align="BOTTOM_LEFT">
            <button id="commitAndCloseBtn" action="windowCommitAndClose" align="BOTTOM_CENTER"/>
            <button id="closeBtn" action="windowClose" align="BOTTOM_CENTER"/>
        </hbox>
    </layout>
</window>
