<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://checklistEdit.caption"
        focusComponent="form"
        messagesPack="com.company.quarium.web.screens.checklist">
    <data>
        <instance id="checklistDc"
                  class="com.company.quarium.entity.checklist.Checklist">
            <view extends="edit">
                <property name="testCase" view="testCase-edit" fetch="AUTO"/>
            </view>
            <loader/>
            <collection id="testCasesDc" property="testCase"/>
        </instance>

        <instance id="testCaseDc"
                  class="com.company.quarium.entity.checklist.TestCase">
            <view extends="testCase-view">
                <property name="caseStep" view="step-view"/>
            </view>
            <loader/>
            <collection id="stepsCollection" property="caseStep"/>
        </instance>
    </data>
    <actions>
        <action id="save" icon="icons/ok.png" caption="mainMsg://actions.Ok" shortcut="CTRL-ENTER"/>
        <action id="cancel" icon="icons/cancel.png" caption="mainMsg://actions.Cancel" description="Esc"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <tabSheet>
            <tab id="detailsTab" caption="msg://checklistEdit.details" spacing="true" margin="true">
                <form id="form" dataContainer="checklistDc">
                    <column width="350px">
                        <textField id="nameField" property="name"/>
                        <textArea id="commentField" property="comment"/>
                    </column>
                </form>
                <groupBox id="testCaseBox" caption="msg://checklistEdit.testCaseBox" height="500">
                    <split id="split" height="100%" orientation="horizontal" reversePosition="true" width="100%">
                        <vbox id="lookupBox" expand="table" height="100%" margin="false,true,false,false"
                              spacing="true">
                            <groupTable id="table"
                                        width="100%"
                                        dataContainer="testCasesDc"
                                        multiselect="true"
                                        presentations="true">
                                <actions>
                                    <action id="create" type="create"/>
                                    <action id="edit" type="edit"/>
                                    <action id="remove" type="remove"/>
                                </actions>
                                <columns>
                                    <column id="name"/>
                                    <column id="step"/>
                                    <column id="expectedResult"/>
                                </columns>
                                <rowsCount/>
                                <buttonsPanel id="buttonsPanel"
                                              alwaysVisible="true">
                                    <button id="createBtn" action="table.create"/>
                                    <button id="editBtn" action="table.edit"/>
                                    <button id="removeBtn" action="table.remove"/>
                                </buttonsPanel>
                            </groupTable>
                        </vbox>
                        <vbox id="editBox" height="100%" margin="false,false,false,true" expand="fieldGroupBox"
                              spacing="true">
                            <scrollBox id="fieldGroupBox">
                                <form id="caseForm" dataContainer="testCaseDc">
                                    <column width="350px">
                                        <textField id="caseNameField" property="name"/>
                                        <table id="stepsTable"
                                               dataContainer="stepsCollection"
                                               width="AUTO"
                                               height="200px"
                                               multiselect="true"
                                               columnHeaderVisible="false"
                                               caption="msg://checklistEdit.steps"
                                               multiLineCells="true"
                                               editable="true">
                                            <actions>
                                                <action id="createStep" type="create"/>
                                                <action id="removeStep" type="remove"/>
                                            </actions>
                                            <columns>
                                                <column id="step" width="350"
                                                        editable="true"/>
                                            </columns>
                                            <buttonsPanel>
                                                <button action="stepsTable.createStep" caption="" icon="ADD_ACTION"/>
                                                <button action="stepsTable.removeStep" caption="" icon="REMOVE_ACTION"/>
                                            </buttonsPanel>
                                        </table>
                                        <textArea id="expectedResultField" property="expectedResult" rows="4"/>
                                    </column>
                                </form>
                            </scrollBox>
                            <hbox id="actionsPane" spacing="true" visible="true">
                                <button id="saveBtn" action="save"/>
                                <button id="cancelBtn" action="cancel"/>
                            </hbox>
                        </vbox>
                    </split>
                </groupBox>
            </tab>
            <tab id="versionsTab" caption="msg://checklistEdit.versions" spacing="true" margin="true">
                <vbox id="versionsBox" margin="true">
                    <frame id="diffFrame"
                           src="/com/haulmont/cuba/gui/app/core/entitydiff/diff-view.xml"
                           width="100%"
                           height="600px"/>
                </vbox>
            </tab>
        </tabSheet>
        <hbox id="editActions" spacing="true" align="BOTTOM_LEFT">
            <button id="commitAndCloseBtn" action="windowCommitAndClose" align="BOTTOM_CENTER"/>
            <button id="closeBtn" action="windowClose" align="BOTTOM_CENTER"/>
        </hbox>
    </layout>
</window>
